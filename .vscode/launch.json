{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/frontend/js",
        },
        {
            "name": "npm-start",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "start"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}/frontend/js",
            "type": "node"
        },

        {
            "name": "Backend API (Go)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/backend/main.go",
            "env": {
                "ENVIRONMENT": "test",
                "CONFIG_DIR" : "${workspaceFolder}/backend/config",

            },
        },
        {
            "name": "Flutter (Chrome)",
            "program": "lib/main.dart",
            "cwd": "frontend/flutter",
            "deviceId": "chrome",
            "request": "launch",
            "type": "dart",
            "toolArgs": [
                "--dart-define",
                "BASE_URL=http://0.0.0.0:9000/",
            ]
        },

    ]
}