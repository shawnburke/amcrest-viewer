{
    "version": "0.2.0",
    "configurations": [
       
        {
            "name": "Backend API (Go)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/backend/main.go",
            "env": {
                "ENVIRONMENT": "test"
            }
        },
        {
            "name": "Flutter (Chrome)",
            "program": "lib/main.dart",
            "cwd": "frontend-flutter",
            "deviceId": "chrome",
            "request": "launch",
            "type": "dart",
            
            "toolArgs": [
                "--dart-define",
                "BASE_URL=http://192.168.86.10:9000/",
            ]
        }
    ]
}